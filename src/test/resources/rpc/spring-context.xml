<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
 	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
 	
 	<import resource="mysql.xml"/>  
 	
	<bean id="sqlSessionFactory"  class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/rpc/mybatis.xml" />
		<property name="mapperLocations">
			<list>
				<value>classpath*:/rpc/mapper/*.xml</value>
			</list>
		</property>
	</bean>
	
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">  
	  <constructor-arg ref="sqlSessionFactory"/>
	</bean>   
	
	<bean class="io.zbus.rpc.Template">
		<property name="templateDir" value="static" />
		<property name="defaultEncoding" value="UTF8" />
		<property name="urlPrefix" value="/tpl" />
	</bean>
	
	<bean class="io.zbus.rpc.biz.DbExample"/> 
	<bean class="io.zbus.rpc.biz.InterfaceExampleImpl"/>  
	<bean class="io.zbus.rpc.biz.TemplateExample"/>  
	
	<!-- Filter Config -->
	<bean class="io.zbus.rpc.filer.GlobalBeforeFilter"/>  
	<bean class="io.zbus.rpc.filer.AdminLoginFilter"/> 
	<bean class="io.zbus.rpc.filer.SimpleUserLoginFilter"/> 
	<bean class="io.zbus.rpc.filer.LoggerFilter"/> 
	<bean class="io.zbus.rpc.filer.GlobalExceptionFilter"/> 
</beans>